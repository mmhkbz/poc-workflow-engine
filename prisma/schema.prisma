generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model WorkflowInstance {
  id               String                 @id @default(cuid())
  workflowId       String
  status           WorkflowInstanceStatus @default(running)
  variables        Json
  defSnapshot      Json
  currentNode      String?
  refId            String?
  createdBy        String?                @default("system")
  updatedBy        String?
  createdAt        DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  tasks            Task[]
  parallelBranches ParallelBranchInstance[]
  actionHistories        WorkflowActionHistory[]

  @@index([workflowId])
  @@index([createdBy])
  @@map("workflow_instances")
}

model WorkflowActionHistory {
  id               String   @id @default(cuid())
  workflowInstanceId String
  action           String
  performedBy      String?
  details          Json?
  createdAt        DateTime @default(now())
  workflowInstance WorkflowInstance @relation(fields: [workflowInstanceId], references: [id])

  @@index([workflowInstanceId, action])
  @@map("workflow_action_histories")
}

model Task {
  id             String          @id @default(cuid())
  instanceId     String
  workflowId     String
  nodeKey        String
  status         TaskStatus
  assignedUserId String?
  assignedRoleId String?
  inputs         Json
  outputs        Json?
  createdBy      String?
  updatedBy      String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  workflowInstance WorkflowInstance @relation(fields: [instanceId], references: [id])
  slas           SlaInstance[]
  timers         TimerInstance[]

  escalatedFromTaskId String?            @unique
  escalatedFrom       Task?              @relation("TaskEscalation", fields: [escalatedFromTaskId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  escalation          Task?              @relation("TaskEscalation")

  @@index([instanceId])
  @@map("tasks")
}

model ParallelBranchInstance {
  id                 String       @id @default(cuid())
  workflowInstanceId String
  workflowInstance   WorkflowInstance @relation(fields: [workflowInstanceId], references: [id])
  branchKey          String
  status             BranchStatus
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@map("parallel_branch_instances")
}

model SlaInstance {
  id         String    @id @default(cuid())
  taskId     String
  task       Task      @relation(fields: [taskId], references: [id])
  slaKey     String
  status     SlaStatus
  breachedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("sla_instances")
}

model TimerInstance {
  id          String      @id @default(cuid())
  taskId      String
  task        Task        @relation(fields: [taskId], references: [id])
  timerKey    String
  status      TimerStatus
  triggeredAt DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("timer_instances")
}

model Job {
  id        String    @id @default(cuid())
  jobId     String    @unique
  queueName String
  data      Json
  status    JobStatus
  type      JobType
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("jobs")
}

enum WorkflowInstanceStatus {
  running
  completed
  failed
  cancelled
}

enum TaskStatus {
  pending
  assigned
  completed
  failed
  escalated
}

enum BranchStatus {
  running
  completed
  failed
}

enum SlaStatus {
  active
  breached
  paused
  completed
}

enum TimerStatus {
  active
  triggered
  paused
  cancelled
}

enum JobStatus {
  pending
  completed
  failed
}

enum JobType {
  notification
  sla
  timer
  workflow
}